{
  "description": "Events that should be allowed without modification",
  "scenarios": [
    {
      "name": "Safe echo command",
      "event": {
        "hook_event_name": "PreToolUse",
        "tool_name": "Bash",
        "tool_input": {
          "command": "echo 'Hello, World!'"
        }
      },
      "expectedOutcome": "Allow"
    },
    {
      "name": "Normal git push",
      "event": {
        "hook_event_name": "PreToolUse",
        "tool_name": "Bash",
        "tool_input": {
          "command": "git push origin feature/new-feature"
        }
      },
      "expectedOutcome": "Allow"
    },
    {
      "name": "Read file",
      "event": {
        "hook_event_name": "PreToolUse",
        "tool_name": "Read",
        "tool_input": {
          "file_path": "/path/to/file.txt"
        }
      },
      "expectedOutcome": "Allow"
    },
    {
      "name": "List directory",
      "event": {
        "hook_event_name": "PreToolUse",
        "tool_name": "Bash",
        "tool_input": {
          "command": "ls -la"
        }
      },
      "expectedOutcome": "Allow"
    }
  ]
}
