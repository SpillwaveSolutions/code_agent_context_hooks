{
  "description": "Events that should trigger block actions",
  "scenarios": [
    {
      "name": "Force push",
      "event": {
        "hook_event_name": "PreToolUse",
        "tool_name": "Bash",
        "tool_input": {
          "command": "git push --force origin main"
        }
      },
      "expectedOutcome": "Block",
      "expectedReason": "Force push is disabled for safety"
    },
    {
      "name": "Hard reset",
      "event": {
        "hook_event_name": "PreToolUse",
        "tool_name": "Bash",
        "tool_input": {
          "command": "git reset --hard HEAD~5"
        }
      },
      "expectedOutcome": "Block",
      "expectedReason": "Hard reset requires confirmation"
    },
    {
      "name": "Dangerous delete",
      "event": {
        "hook_event_name": "PreToolUse",
        "tool_name": "Bash",
        "tool_input": {
          "command": "rm -rf /"
        }
      },
      "expectedOutcome": "Block",
      "expectedReason": "Dangerous delete operation blocked"
    }
  ]
}
