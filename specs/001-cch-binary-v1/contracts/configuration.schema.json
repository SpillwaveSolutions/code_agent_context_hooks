{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CCH Configuration Schema",
  "description": "JSON schema for CCH YAML configuration files",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Configuration format version",
      "pattern": "^\\d+\\.\\d+$",
      "examples": ["1.0"]
    },
    "rules": {
      "type": "array",
      "description": "Array of policy rules to enforce",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique identifier for this rule",
            "pattern": "^[a-zA-Z0-9_-]+$",
            "examples": ["block-force-push", "inject-cdk-context"]
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the rule",
            "examples": ["Block dangerous git force push operations"]
          },
          "matchers": {
            "type": "object",
            "description": "Conditions that trigger this rule",
            "properties": {
              "tools": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Tool names to match",
                "examples": [["Bash"], ["Edit", "Write"]]
              },
              "extensions": {
                "type": "array",
                "items": { "type": "string" },
                "description": "File extensions to match",
                "examples": [[".rs"], [".ts", ".tsx"]]
              },
              "directories": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Directory patterns to match (glob syntax)",
                "examples": [["src/**"], ["tests/**", "docs/**"]]
              },
              "operations": {
                "type": "array",
                "items": { "type": "string" },
                "description": "Operation types to match",
                "examples": [["create"], ["modify", "delete"]]
              },
              "command_match": {
                "type": "string",
                "description": "Regex pattern to match against commands",
                "examples": ["git push.*--force", "rm -rf /"]
              }
            },
            "additionalProperties": false
          },
          "actions": {
            "type": "object",
            "description": "Actions to take when rule matches",
            "properties": {
              "inject": {
                "type": "string",
                "description": "Path to file containing context to inject",
                "examples": [".claude/skills/aws-cdk/SKILL.md"]
              },
              "run": {
                "type": "string",
                "description": "Path to validator script to execute",
                "examples": [".claude/validators/no-console.py"]
              },
              "block": {
                "type": "boolean",
                "description": "Whether to block the operation",
                "examples": [true]
              },
              "block_if_match": {
                "type": "string",
                "description": "Regex pattern for conditional blocking",
                "examples": ["console\\.log"]
              }
            },
            "additionalProperties": false
          },
          "metadata": {
            "type": "object",
            "description": "Additional rule metadata",
            "properties": {
              "priority": {
                "type": "integer",
                "description": "Rule evaluation priority (higher = evaluated first)",
                "default": 0,
                "examples": [10, -5]
              },
              "timeout": {
                "type": "integer",
                "description": "Script execution timeout in seconds",
                "default": 5,
                "minimum": 1,
                "maximum": 30,
                "examples": [10, 3]
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether this rule is enabled",
                "default": true,
                "examples": [true, false]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false,
        "oneOf": [
          { "required": ["actions"] }
        ]
      }
    },
    "settings": {
      "type": "object",
      "description": "Global CCH settings",
      "properties": {
        "log_level": {
          "type": "string",
          "enum": ["error", "warn", "info", "debug"],
          "default": "info",
          "description": "Logging verbosity level"
        },
        "max_context_size": {
          "type": "integer",
          "description": "Maximum size of injected context in bytes",
          "default": 1048576,
          "minimum": 1024,
          "maximum": 10485760,
          "examples": [2097152]
        },
        "script_timeout": {
          "type": "integer",
          "description": "Default script execution timeout in seconds",
          "default": 5,
          "minimum": 1,
          "maximum": 30
        },
        "fail_open": {
          "type": "boolean",
          "description": "Whether to continue operations on errors",
          "default": true
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}